<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

   <android.support.v7.widget.Toolbar
       android:id="@+id/mToolbar"
       android:background="#1192e6"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:text="请设置您要关注的课节标签"
           android:textColor="#fff"
           android:gravity="center"
           android:textSize="17dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
   </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/mimg_wenhao"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/card_help"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclView"
        android:layout_below="@id/mimg_wenhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/mbt_qd"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/qd"
        android:textColor="#fff" />
</RelativeLayout>